<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/devices_dropdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:drawableEndCompat="@drawable/arrow_down"
        tools:text="IDTECH-VP3300-26970" />

    <TextView
        android:id="@+id/no_device_connected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="Please select a reader to connect"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/device_idle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="Idle"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:visibility="gone"
        app:drawableStartCompat="@drawable/device_idle" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/device_paired"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/device_signal_strength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Connected"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/device_idle" />

        <TextView
            android:id="@+id/device_battery_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/battery_life_100"
            tools:text="100%" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/charge_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:text="$20.00" />

    <TextView
        android:id="@+id/charge_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:gravity="center"
        android:text="+ Add Note"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/numpad"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/black" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/charge_button"
        style="@style/ShapeAppearanceOverlay.MyApp.Button.RoundedGreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        tools:text="Charge $20.00" />

</LinearLayout>
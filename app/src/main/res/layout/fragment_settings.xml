<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/toolbar_layout"
        layout="@layout/layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/merchant_select_fragment"
        android:name="com.xplore.paymobile.ui.merchantselection.MerchantSelectFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar_layout"
        android:layout_marginTop="@dimen/margin_big" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dev_settings_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ShapeAppearanceOverlay.Button.RoundedBlack"
        android:text="Developer settings"
        android:layout_marginVertical="@dimen/margin_large"
        android:layout_marginHorizontal="@dimen/margin_medium_big"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/merchant_select_fragment"
        app:layout_constraintVertical_bias="1" />

</androidx.constraintlayout.widget.ConstraintLayout>